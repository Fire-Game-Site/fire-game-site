---
import Icon from '../../node_modules/astro-material-design/components/icon.astro'
---

<label for="colorpicker">
	<Icon color="var(--md-color-on-surface)" clearance="8px" id="palette">palette</Icon>
</label>
<input type="color" style="width: 0; height: 0; box-sizing: border-box; opacity: 0;" id="colorpicker">

<script is:inline>
	document.querySelector('#colorpicker').addEventListener('change', (e) => {
		console.log(`/updateCookie/color/${e.target.value.replaceAll('#', '')}${window.location.pathname}`)
		window.location.href = `/updateCookie/color/${e.target.value.replaceAll('#', '')}${window.location.pathname}`
	})
</script>

<style is:global>
	#palette {
		position: relative;
        overflow: hidden;
        margin-left: 30px;
        margin-right: 24px;
	}

	#palette:hover::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:  var(--md-color-on-surface-variant);
        opacity: 0.08;
        overflow: hidden;
        border-radius: 100vh;
	}
</style>